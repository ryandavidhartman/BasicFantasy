# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# spell ui routing
GET     /spells                controllers.SpellController.getSpellsPage(name: Option[String], range: Option[String], cleric: Option[Int], magicUser: Option[Int], duration: Option[String], description: Option[String])
GET     /spells/create         controllers.SpellController.createSpellPage()
POST    /spells/create         controllers.SpellController.createSpell()
GET     /spells/update/:id     controllers.SpellController.updateSpellPage(id: String)
POST    /spells/update         controllers.SpellController.updateSpell()

# spell api routing
GET     /v1/api/spells         controllers.SpellController.findAll(name: Option[String], range: Option[String], cleric: Option[Int], magicUser: Option[Int], duration: Option[String], description: Option[String])
GET     /v1/api/spells/:name   controllers.SpellController.findByName(name: String)
POST    /v1/api/spells         controllers.SpellController.create()
PUT     /v1/api/spells/:id     controllers.SpellController.update(id: String)
DELETE  /v1/api/spells/:id     controllers.SpellController.delete(id: String)
